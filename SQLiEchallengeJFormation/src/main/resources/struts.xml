<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- define constants -->
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="false"/>
    
    <constant name="struts.custom.i18n.resources" value="global" /> 
    
    <constant name="struts.action.extension" value="," />
	<constant name="struts.ui.theme" value="simple" />
	
	<constant name="struts.multipart.saveDir" value="/documents" />
	
	<constant name="struts.enable.SlashesInActionNames" value="true"/>
	<constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
	<constant name="struts.patternMatcher" value="regex" />
	<!-- end define constants -->
	
	<!-- default package -->
    <include file="struts/struts-default.xml"></include>
    
	<!-- administrateur package -->
    <include file="struts/struts-administrateur.xml"></include>
    
	<!-- responsable formation package -->
    <include file="struts/struts-responsable-formation.xml"></include>
    
    <!-- formateur package -->
    <include file="struts/struts-formateur.xml"></include>
    
    <!-- collaborateur package -->
    <include file="struts/struts-collaborateur.xml"></include>
    
    <!-- ajax package -->
    <include file="struts/struts-ajax.xml"></include>
    
</struts>
